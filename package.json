{
  "name": "conversational-clone",
  "version": "1.0.0",
  "private": true,
  "description": "Real-Time Conversational Clone System - Monorepo",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "pnpm": {
    "overrides": {
      "glob@<8": ">=11.0.0",
      "rimraf@<4": ">=6.0.0",
      "inflight": "npm:@aashutoshrathi/inflight@^1.0.0",
      "lodash.get": ">=4.4.2",
      "lodash.isequal": ">=4.5.0",
      "node-domexception": ">=1.0.0"
    }
  }
}
