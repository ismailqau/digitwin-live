{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@clone/shared-types": ["./packages/shared-types/src"],
      "@clone/api-client": ["./packages/api-client/src"],
      "@clone/validation": ["./packages/validation/src"],
      "@clone/config": ["./packages/config/src"],
      "@clone/logger": ["./packages/logger/src"],
      "@clone/errors": ["./packages/errors/src"],
      "@clone/utils": ["./packages/utils/src"],
      "@clone/constants": ["./packages/constants/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
