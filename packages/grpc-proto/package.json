{
  "name": "@clone/grpc-proto",
  "version": "1.0.0",
  "description": "Protocol Buffer definitions for microservices communication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "proto:generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --ts_out=grpc_js:./src/generated --proto_path=./proto ./proto/*.proto"
  },
  "dependencies": {
    "@clone/service-auth": "workspace:*",
    "@clone/service-discovery": "workspace:*",
    "@clone/service-errors": "workspace:*",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.10",
    "google-protobuf": "^3.21.2"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^20.0.0",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "typescript": "^5.0.0"
  }
}
